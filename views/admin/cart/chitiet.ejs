            <div class="content-header col-lg-5">
                <h3>Chi tiết đơn hàng</h3>
            </div>
        </div>
        <div class="row content">
            
            <div class="content-body col-lg-12">
                    <div class="col-lg-6 info-checkout">
                            <h3>Thông tin khách hàng</h3>
                            <p>Ngày đặt hàng : <%= checkout.date %></p>
                            <p>Tên : <%= checkout.ten %></p>
                            <p>Số điện thoại : <%= checkout.phone %></p>
                            <p>Địa chỉ : <%= checkout.diachi %></p>
                            <p>Tỉnh : <%= checkout.tinh %></p>
                            <p>Quận / Huyện : <%= checkout.quan_huyen %></p>
                            <p>Xã / Phường : <%= checkout.xa_phuong %></p>
                            <p style="color : red; font-size: 23px">Tổng tiền : <%= chuyentien(`${checkout.tong_tien}`) %></p>
                            <% if(checkout.state == 0) { %>
                                <a href="/admin/cart/giao-hang/<%= checkout.id %>">
                                    <span class="btn btn-primary">Giao hàng</span>
                                </a>
                                
                            <% }else if(checkout.state == 1){ %>
                                <a href="/admin/cart/thanh-toan/<%= checkout.id %>">
                                    <span class="btn btn-primary">Thanh toán</span>
                                </a>
                                
                            <% }else{ %>
                                <p><button class="btn btn-danger">Giao thành công</button></p>
                            <% } %>
                            
                            <h3>Chi tiết sản phẩm</h3>
                    </div>
                    
