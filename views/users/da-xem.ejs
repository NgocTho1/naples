<% include ../layouts/header.ejs %>

<div class="container da-xem" id="content" >
    <div class="row">

        <% all.forEach(e => { %>
            <% let img = e.item.hinh_anh.split(',') %>
            <div class="col-lg-3 col-sm-6 col-12 item" style="width: 18rem;">
                <a href="/<%= e.item.link %>.htm">
                    <img class="card-img-top" src="<%= img[0] %>" alt="Card image cap">
                    <p class="tittle"><%= e.item.ten %></p>
                    <div class="price">
                    <span class="final-price"><%= chuyentien.output(`${e.item.gia}`) %></span>
                    <% if(e.item.giam_gia != 0) { %>
                        <del><%= e.item.giam_gia %></del>
                        <span class="sale"><%= e.item.percent %>%</span>
                    <% }  %>
                    
                    </div>
                </a>
            </div>
        <% }) %>
                <% if(lengthPage > 1) {%>
                    <nav aria-label="Page navigation example" id="page">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <% for(i = 1; i <= lengthPage; i++) {%>
                                        <% if(page == i){ %>
                                            <li class="page-item active"><a class="page-link" href="/user/da-xem?page=<%= i %>"><%= i %></a></li>
                                        <% }else{ %>
                                            <li class="page-item"><a class="page-link" href="/user/da-xem?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                <% } %>
                                
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                    </nav>
                <% } %>
       

    </div>
</div>



<% include ../layouts/footer.ejs %>