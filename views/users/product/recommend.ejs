<div class="container" id="recommend">
    <div class="row">
        <h4>Dành riêng cho bạn</h4>
        <div id="carouselExampleControls" style="width: 100%;" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" id="content">
                  <div class="carousel-item active">
                    <div class="row">
                        <% let indexOff = recommend.slice(0, 4)  %>
                        <% indexOff.forEach(e => { let img = e.hinh_anh.split(','); %>
                            
                            <div class="col-lg-3 col-sm-6 col-12 item" style="width: 18rem;">
                                <a href="/<%= e.link %>.htm">
                                    <img class="card-img-top" src="<%= img[0] %>" alt="Card image cap">
                                    <p class="tittle"><%= e.ten %></p>
                                    <div class="price">
                                        
                                        <% if(e.giam_gia != 0) { %>
                                            <span class="final-price"><%= chuyentien(`${e.giam_gia}`) %> ₫</span>
        
                                            <del><%= chuyentien(`${e.gia}`) %> ₫</del>
                                            <span class="sale">-<%= e.percent %>%</span>
                                        <% }else {  %>
                                            <span class="final-price"><%= chuyentien(`${e.gia}`) %> ₫</span>
                                        <% } %>
                                        
                                    
                                    
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                        
                        
                        
                    </div>
                  
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <% let indexOff2 = recommend.slice(4, 8)  %>
                        <% indexOff2.forEach(e => { let img = e.hinh_anh.split(','); %>

                            <div class="col-lg-3 col-sm-6 col-12 item" style="width: 18rem;">
                                <a href="/<%= e.link %>.htm">
                                    <img class="card-img-top" src="<%= img[0] %>" alt="Card image cap">
                                    <p class="tittle"><%= e.ten %></p>
                                    <div class="price">
                                        
                                        <% if(e.giam_gia != 0) { %>
                                            <span class="final-price"><%= chuyentien(`${e.giam_gia}`) %> ₫</span>
        
                                            <del><%= chuyentien(`${e.gia}`) %> ₫</del>
                                            <span class="sale">-<%= e.percent %>%</span>
                                        <% }else {  %>
                                            <span class="final-price"><%= chuyentien(`${e.gia}`) %> ₫</span>
                                        <% } %>
                                        
                                    
                                    
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                        
                       
                       
                    </div>
                </div>
                
                </div>
                <a class="carousel-control-prev all" href="#carouselExampleControls" role="button" data-slide="prev">
                  <i></i>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next all" href="#carouselExampleControls" role="button" data-slide="next">
                  <i></i>
                  <span class="sr-only">Next</span>
                </a>
        </div>
    </div>
</div>