<% if(daxem[0]) { %>
<div class="container" id="recommend">
    <div class="row">
        <h4>Sản phẩm bạn đã xem</h4>
        <div id="carouselExample" style="width: 100%;" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" id="content">

                    <% let qtyFor = Math.ceil(daxem.length / 4) %>
                    <% let start = 0; let end = 4; %>
                    <% for(i = 0; i < qtyFor; i++) { %>
                        <div class="carousel-item state">
                            <div class="row">

                                    <% let indexOff = daxem.slice(start, end)  %>
                                    <% indexOff.forEach(e => { let img = e.item.hinh_anh.split(','); %>
                                       
                                        <div class="col-lg-3 col-sm-6 col-12 item" style="width: 18rem;">
                                            <a href="/<%= e.item.link %>.htm">
                                                <img class="card-img-top" src="<%= img[0] %>" alt="Card image cap">
                                                <p class="tittle"><%= e.item.ten %></p>
                                                <div class="price">
                                                    
                                                    <% if(e.item.giam_gia != 0) { %>
                                                        <span class="final-price"><%= chuyentien(`${e.item.giam_gia}`) %> ₫</span>
                    
                                                        <del><%= chuyentien(`${e.item.gia}`) %> ₫</del>
                                                        <span class="sale">-<%= e.item.percent %>%</span>
                                                    <% }else {  %>
                                                        <span class="final-price"><%= chuyentien(`${e.item.gia}`) %> ₫</span>
                                                    <% } %>
                                                    
                                                
                                                
                                                </div>
                                            </a>
                                        </div>
                                    <% }) %>
                                    
                            </div>
                                
                                
                        </div>
                        <% start += 4; end += 4; %>

                    <% } %>
                        
                  
                </div>
                
                <a class="carousel-control-prev all" href="#carouselExample" role="button" data-slide="prev">
                  <i></i>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next all" href="#carouselExample" role="button" data-slide="next">
                  <i></i>
                  <span class="sr-only">Next</span>
                </a>
        </div>
    </div>
</div>
<% } %>